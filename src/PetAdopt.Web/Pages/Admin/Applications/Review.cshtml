@page "{id:int}"
@model PetAdopt.Web.Pages.Admin.Applications.ReviewModel
@{
    ViewData["Title"] = "Review Application";
}

<h1>Review</h1>

<dl class="row">
    <dt class="col-sm-3">Application Id</dt>
    <dd class="col-sm-9">@Model.App.Id</dd>
    <dt class="col-sm-3">Pet Id</dt>
    <dd class="col-sm-9">@Model.App.PetId</dd>
    <dt class="col-sm-3">Applicant</dt>
    <dd class="col-sm-9">@Model.App.ApplicantUserId</dd>
    <dt class="col-sm-3">Status</dt>
    <dd class="col-sm-9">@Model.App.Status</dd>
</dl>

<form method="post">
    <div class="mb-3">
        <label asp-for="AdminNote" class="form-label">Admin Note</label>
        <textarea asp-for="AdminNote" class="form-control"></textarea>
    </div>

    <button type="submit" name="approve" value="true" class="btn btn-success">Approve</button>
    <button type="submit" name="approve" value="false" class="btn btn-danger">Reject</button>
    <a asp-page="Index" class="btn btn-secondary">Back</a>
</form>

@if (TempData["Msg"] != null)
{
    <div class="alert alert-success mt-3">@TempData["Msg"]</div>
}
