@page
@model PetAdopt.Web.Pages.ErrorModel
@{
    var code = Request?.Query["code"].ToString();
    ViewData["Title"] = string.IsNullOrEmpty(code) ? "Error" : $"Error {code}";

    var heading = code == "404" ? "Page not found 😕"
               : code == "403" ? "Access denied 🚫"
               : "Something went wrong 😵";

    var lead = code == "404" ? "We couldn't find what you were looking for."
             : code == "403" ? "You don't have permission to view this page."
             : "Please try again or go back home.";
}

<div class="text-center my-5">
    <h1 class="display-5">@heading</h1>
    <p class="lead mb-4">@lead</p>

    <a class="btn btn-primary" asp-page="/Index">Go Home</a>
    <a class="btn btn-outline-secondary" asp-page="/Pets/Index">Browse Pets</a>
</div>
